<%= form_with(model: modelo) do |form| %>
  <% if modelo.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(modelo.errors.count, "error") %> prohibited this modelo from being saved:</h2>

      <ul>
        <% modelo.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <form class="form-inline">
    <div class="form-group">
      <%= form.label :nombre, style: "display: block" %>
      <%= form.text_field :nombre, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.label :precio, style: "display: block" %>
      <%= form.text_field :precio, class: "form-control"%>
    </div>
  </form>

  <br>

  <div>
    <% if @modelo.image.attached? %>
      <%= image_tag @modelo.image, style: "width: 200px; display: block" %>
    <% end %>
    <%= form.label :image, style: "width: 200px; display: block"%>
    <%= form.file_field :image%>
  </div>

  <br>

  <div>
    <%= form.submit class: "btn btn-primary" %>
  </div>
<% end %>
