<p style="color: green"><%= notice %></p>

<%= render @modelo %>

<% if @modelo.image.attached? %>
  <p>
    <%= image_tag @modelo.image %>
  </p>
<% end %>

<div>
  <%= link_to "Edit this modelo", edit_modelo_path(@modelo) %> |
  <%= link_to "Back to modelos", modelos_path %>
  <br><br>
  <%= button_to "Destroy this modelo", @modelo, method: :delete %>
</div>
